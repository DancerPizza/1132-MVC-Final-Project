@model _1132FinalProject.Models.NewMembersModel

@{
    ViewData["Title"] = "Edit";
}
<hr />
<div class="d-flex justify-content-center align-items-center" style="min-height:100vh;">
    <div class="col-md-4" style="margin-bottom:7rem">
        <form asp-action="Edit"
              asp-controller="Admin"
              asp-route-id="@Model.StuId"
              method="post"
              class="justify-content-center; align-items-center">
            @Html.AntiForgeryToken()

            <!--隱藏主鍵-->
            <input asp-for="StuId" type="hidden" />

            <!--學號不給更動-->
            <div class="form-group; text-center" style="color:wheat">
                <label style="font-size:22px; font-weight:bold">學號</label>
                <p class="form-control-plaintext" style="color:wheat; font-size:20px">@Model.StuId</p>
            </div>

            <!--姓名-->
            <div class="Register_textbox; text-center">
                <label asp-for="Name" class="control-label" style="color:white; font-size:18px"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!--綽號-->
            <div class="Register_textbox; text-center">
                <label asp-for="NickName" class="control-label" style="color:white; font-size:18px"></label>
                <input asp-for="NickName" class="form-control" />
                <span asp-validation-for="NickName" class="text-danger"></span>
            </div>

            <!--系所-->
            <div class="Register_textbox; text-center">
                <label asp-for="Department" class="control-label" style="color:white; font-size:18px"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>

            <!--組別-->
            <div class="Register_textbox; text-center">
                <label asp-for="Section" class="control-label" style="color:white; font-size:18px"></label>
                <input asp-for="Section" class="form-control" />
                <span asp-validation-for="Section" class="text-danger"></span>
            </div>

            <!--IG帳號-->
            <div class="Register_textbox; text-center">
                <label asp-for="IG_Account" class="control-label" style="color:white; font-size:18px"></label>
                <input asp-for="IG_Account" class="form-control" />
                <span asp-validation-for="IG_Account" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button type="submit"
                        class="btn btn-warning"
                        style="font-weight:bold; width:250px; margin:15px">
                    更新
                </button>
            </div>
        </form>

        <div class="d-flex justify-content-center">
            <a asp-action="Details" asp-route-id="@Model.StuId"
               class="btn btn-success"
               style="font-weight:bold; width:250px; margin:5px">詳細資料</a>
            <a asp-action="List"
               class="btn btn-secondary"
               style="font-weight:bold; width:250px; margin:5px">返回清單</a>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}