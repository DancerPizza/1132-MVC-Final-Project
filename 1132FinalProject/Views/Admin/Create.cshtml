                    @Html.EditorFor(model => model.IG_Account, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IG_Account, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- 表單提交按鈕 -->
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="新增" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

<div>
    <!-- 取消按鈕：返回會員清單 -->
    @Html.ActionLink("返回清單", "List")
</div>