@model _1132FinalProject.Models.NewMembersModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>NewMembersModel</h4>
<hr />
<div class="col-md-4">
    <!-- 建立表單，POST方法 -->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <!-- 顯示所有的驗證錯誤訊息 -->
